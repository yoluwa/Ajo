<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.oluwaseun.ajo.fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activeGroups"
                android:textSize="@dimen/topic_text"
                android:textColor="@color/dark"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <android.support.v7.widget.CardView
                android:id="@+id/group1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group1Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/family"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/group1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/group1Logo"
                        android:textSize="30sp"
                        android:text="@string/group1Name"/>

                    <TextView
                        android:id="@+id/groupDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group1Name"
                        android:text="@string/group1Details"
                        android:layout_toRightOf="@+id/group1Logo" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/group2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group2Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src = "@drawable/gift"/>

                    <TextView
                        android:id="@+id/group2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/group2Logo"
                        android:text="@string/group2Name"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/group2details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group2Name"
                        android:text="@string/group2Details"
                        android:layout_toRightOf="@+id/group2Logo" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/group3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/group3Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src = "@drawable/house"/>

                    <TextView
                        android:id="@+id/group3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/group3Logo"
                        android:text="@string/group3Name"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/group3details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/group3Name"
                        android:layout_toRightOf="@+id/group3Logo"
                        android:text="@string/group3Details"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/archivedGroups"
                android:textSize="@dimen/topic_text"
                android:textColor="@color/dark"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <android.support.v7.widget.CardView
                android:id="@+id/groupOld1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/groupOld1Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/family"
                        android:scaleType="fitCenter"/>

                    <TextView
                        android:id="@+id/groupOld1Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/groupOld1Logo"
                        android:textSize="30sp"
                        android:text="@string/group1Name"/>

                    <TextView
                        android:id="@+id/groupOld1Details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groupOld1Name"
                        android:text="@string/group1Details"
                        android:layout_toRightOf="@+id/groupOld1Logo" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/groupOld2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/groupOld2Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src = "@drawable/gift"/>

                    <TextView
                        android:id="@+id/groupOld2Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/groupOld2Logo"
                        android:text="@string/group2Name"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/groupOld2details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groupOld2Name"
                        android:text="@string/group2Details"
                        android:layout_toRightOf="@+id/groupOld2Logo" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/groupOld3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/groupOld3Logo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="16dp"
                        android:src = "@drawable/house"/>

                    <TextView
                        android:id="@+id/groupOld3Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/groupOld3Logo"
                        android:text="@string/group3Name"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/groupOld3details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/groupOld3Name"
                        android:layout_toRightOf="@+id/groupOld3Logo"
                        android:text="@string/group3Details"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>



    </ScrollView>




</FrameLayout>
