<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#228B22</item>
        <item name="colorPrimaryDark">#006400</item>
        <item name="colorAccent">#2CB42C</item>
        <item name="android:windowActionBar">@drawable/gradient</item>
        <!--<item name="windowActionBar">@drawable/gradient</item>-->
        <!--<item name="colorPrimaryLight">#C8E6C9</item>-->
        <!--<item name="colorPrimaryText">#212121</item>-->
        <!--<item name="colorSecondaryText">#757575</item>-->
        <!--<item name="icons">#FFFFFF #4CAF50 #388E3C #32CD32 #8BC34A</item>-->
